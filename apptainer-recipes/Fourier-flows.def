Bootstrap: docker
From: debian:buster-slim

%post

    export LANG=C.UTF-8 LC_ALL=C.UTF-8

    apt-get update -q && \
    apt-get install -q -y --no-install-recommends \
        g++ \
	gcc \
	git \
	python3.7 \
        python3.7-dev \
        python3.7-venv \
        python3-pip \
    && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

    git clone https://github.com/ahmedmalaa/Fourier-flows.git /Fourier-flows

    python3.7 -m venv /venv
    . /venv/bin/activate
    pip install --upgrade pip
    pip install \
        jupyterlab==3.1.7 \
        matplotlib==3.3.4 \
        notebook==6.4.3 \
        numpy==1.18.5 \
        torch==1.3.1 \
        scikit-learn==0.24.2 \
        scipy==1.5.2 \
        seaborn==0.11.2 \
        tensorflow==1.15.5

%environment
    export LANG=C.UTF-8 LC_ALL=C.UTF-8
    . /venv/bin/activate