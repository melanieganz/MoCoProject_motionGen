Bootstrap: docker
From: debian:buster-slim

%post

    export LANG=C.UTF-8 LC_ALL=C.UTF-8

    apt-get update -q && \
    apt-get install -q -y --no-install-recommends \
        g++ \
        gcc \
        git \
        python3.7 \
        python3.7-dev \
        python3.7-venv \
        python3-pip \
    && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

    git clone https://github.com/YihaoAng/TSGBench.git /TSGBench

    python3.7 -m venv /venv
    . /venv/bin/activate
    pip install --upgrade pip
    pip install \
        dtaidistance==2.3.10 \
        matplotlib==3.5.3 \
        mgzip==0.2.1 \
        mkl==2022.0.2 \
        mkl_service==2.4.0 \
        ml_collections==0.1.1 \
        numpy==1.18.5 \
        pandas==1.1.5 \
        scikit_learn==1.0.2 \
        scipy==1.7.3 \
        seaborn==0.11.2 \
        statsmodels==0.13.2 \
        tensorflow==1.15.5 \
        torch==1.10.1 \
        tslearn==0.6.1 \
        protobuf==3.20.3

%environment
    export LANG=C.UTF-8 LC_ALL=C.UTF-8
    . /venv/bin/activate
